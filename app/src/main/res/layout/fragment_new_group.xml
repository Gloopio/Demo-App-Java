<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/flatui_alizarin"
             tools:context="io.gloop.demo.app.fragments.groups.NewGroupFragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/new_group_et_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/enter_name_for_group"
            android:background="@color/white"/>

        <Button
            android:id="@+id/new_group_bt_next"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:text="@string/next"/>
    </LinearLayout>
</FrameLayout>
